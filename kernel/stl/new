#ifndef __new__
#define __new__

/*
  File
  ----
  new.hpp
  
  Description
  -----------
  Functions for dynamic memory.

  Authors:
  Justin R. Wilson
*/

#include <stddef.h>

inline void*
operator new (size_t,
	      void* p)
{
  return p;
}

inline void
operator delete (void*,
		 void*)
{
  // Do nothing.
}

inline void*
operator new[] (size_t,
		void* p)
{
  return p;
}

inline void
operator delete[] (void*,
		   void*)
{
  // Do nothing.
}

/* Local Variables: */
/* mode:c++         */
/* End:             */

#endif /* __new__ */
